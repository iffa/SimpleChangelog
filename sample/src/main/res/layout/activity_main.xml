<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <CheckBox
        android:id="@+id/cb_custom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cb_custom_title" />

    <CheckBox
        android:id="@+id/cb_custom_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cb_custom_subtitle" />

    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/btn_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_show" />

    <Button
        android:id="@+id/btn_show_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_show_long" />

    <Button
        android:id="@+id/btn_show_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_show_notification" />

    <Button
        android:id="@+id/btn_show_themed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_show_themed" />
</LinearLayout>
